%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source package-check package

all: splash makefile 

clean:
	rm -f *.dep
	-$(MAKE) clean-local
splash:


LDFLAGS = -nostdlib -Wl,-T,current-arch/kernel.ld -lgcc -m32 $(EXTRA_LDFLAGS)

storm: $(OBJECTS) $(ALL_OBJECTS)
	@echo "Linking..."
	@$(CC) -o $(@) $(OBJECTS) $(ALL_OBJECTS) $(LIBS) $(LDFLAGS)

install: all

package-source:
	mkdir -p /home/per/Projects/chaos-old/storm/package-source/include/storm/generic
	-cp -f makefile.template $(EXTRA_FILES) /home/per/Projects/chaos-old/storm/package-source/include/storm/generic
	for header in $(HEADERS) ; do cp $$header /home/per/Projects/chaos-old/storm/package-source/include/storm/generic || exit ; done
package-check: package-source
	     cd package-source && ./configure $(ALL_ARGUMENTS) && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf storm-0.5.0
	mv package-source storm-0.5.0
	tar cvIf storm-0.5.0.tar.bz2 storm-0.5.0
	     

